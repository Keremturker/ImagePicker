<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keremturker.imagepicker" >


     <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true"  >

        <activity
            android:name="com.keremturker.imagepicker.ImageSelectorActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/ImageSelectorTheme"/>
        <activity
            android:name=".preview.MultiImgShowActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/ImageShowTheme" >
        </activity>
    </application>

</manifest>
